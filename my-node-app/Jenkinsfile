pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                git url: 'https://github.com/yourusername/my-node-app.git', branch: 'main'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build('my-node-app-image')
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    // Simulate running tests (replace with actual test command)
                    sh 'echo "Running tests..."'
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    // Push the image to Docker Hub (configure credentials in Jenkins)
                    docker.withRegistry('https://index.docker.io/v1/', 'docker-credentials-id') {
                        docker.image('my-node-app-image').push('latest')
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                ansiblePlaybook playbook: 'deploy.yml', inventory: 'hosts.ini'
            }
        }
    }
}

